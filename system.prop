#
#
# system.prop for Vernee Apollo Lite
#

# RIL
rild.libpath=mtk-ril.so
rild.libargs=-d /dev/ttyC0

# Wifi
wifi.interface=wlan0
wifi.direct.interface=p2p0

# OpenGL
ro.opengles.version=196610

# Dalvik
dalvik.vm.heapgrowthlimit=256m
dalvik.vm.heapsize=512m

# Audio
ro.camera.sound.forced=0
ro.audio.silent=0
persist.af.audio_patch_fm=1

# Enable soft keys
qemu.hw.mainkeys=0

# LCD density
ro.sf.lcd_density=480

ro.sf.hwrotation=0

# Mediatek
ro.mediatek.chip_ver=S01
ro.mediatek.platform=MT6797
ro.mediatek.version.release=alps-mp-n1.mp9-db.p2016.12.19.10.00.pre_demo97v1.64

# RIL
persist.radio.multisim.config=dsds
persist.radio.fd.counter=15
persist.radio.fd.off.counter=5
persist.radio.fd.r8.counter=15
persist.radio.fd.off.r8.counter=5
ro.telephony.sim.count=2
ril.current.share_modem=2
ril.external.md=0
ril.telephony.mode=0
ro.mtk_enable_md1=1
ro.mtk_flight_mode_power_off_md=1
ro.mtk_md_world_mode_support=1
ro.mtk_world_phone=1
ro.mtk_world_phone_policy=0
ro.mtk_rild_read_imsi=1
ro.mtk_volte_support=1
persist.mtk.volte.enable=1
ro.boot.opt_md1_support=1

# WFD
wfd.dummy.enable=1
wfd.iframesize.level=0
persist.debug.wfd.enable=1

# WMT
persist.mtk.wcn.combo.chipid=-1
persist.mtk.wcn.patch.version=-1
persist.mtk.wcn.dynamic.dump=0
service.wcn.driver.ready=no
service.wcn.coredump.mode=0

# PQ
ro.mtk_pq_support=3
ro.mtk_pq_color_mode=1

# OMX
ro.mtk_deinterlace_support=1
mtk.vdec.waitkeyframeforplay=1

# DRM
drm.service.enabled=true
